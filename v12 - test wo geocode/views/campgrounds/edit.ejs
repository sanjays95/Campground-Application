<% include ../partials/header %>
<div class='container'>
    <h1 style="text-align:center;">Edit <%= camp.name %> Camp</h1>
        <div class='row'>
            <div style='width:30%; margin : 35px auto;'>
                <form action="/camps/<%= camp._id %>?_method=PUT" method="POST">
                    <div class ='form-group'>
                    <input class='form-control' type='text' value='<%= camp.name %>' name='camp[name]'></input>
                    </div>

                    <div class ='form-group'>
                    <input class='form-control' type='text' value='<%= camp.image %>' name='camp[image]'></input>
                    </div>

                    <div class ='form-group'>
                    <input class='form-control' type='text' value='<%= camp.location %>' name='camp[location]'></input>
                    </div>

                    <div class ='form-group'>
                    <input class='form-control' type='text' value='<%= camp.description %>' name='camp[description]'></input>
                    </div>

                    <div class ='form-group'>
                    <input class='form-control' type='number' min="0.01" step="0.01" value='<%= camp.price %>' name='camp[price]'></input>
                    </div>

                    <div class ='form-group'>
                    <button class='btn btn-lg btn-primary btn-block' type='submit'>Submit</button>
                    </div>
                </form>
                 <a href='/camps'>Go Back</a>
            </div>
        
    </div>
   
</div>

<% include ../partials/footer %>