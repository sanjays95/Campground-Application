<% include ../partials/header %>
<div class='container'>
    <h1 style="text-align:center;">Edit comment</h1>
        <div class='row'>
            <div style='width:30%; margin : 35px auto;'>
                <form method="POST" action="/camps/<%= camp_id %>/comments/<%= comment._id %>?_method=PUT">
                    <div class ='form-group'>
                    <input class='form-control' type='text' placeholder='<%= comment.text %>' name='comment[text]'></input>
                    </div>
                    <div class ='form-group'>
                    <button class='btn btn-lg btn-primary btn-block' type='submit'>Submit</button>
                    </div>
                </form>
                 <a href='/camps/<%= camp_id %>'>Go Back</a>
            </div>
        
    </div>
   
</div>

