<% include ../partials/header.ejs %>

<div class="container">	
		<div class='row'>
				<div class="col-md-3">	
						<p class="lead">CampYoWay</p>
						<ul class="list-group">	
								<li class="list-group-item active">Info 1</li>
		  						<li class="list-group-item">Info 2</li>
		  						<li class="list-group-item">Info 3</li>
						</ul>
				</div>
				<div class="col-md-9">
					<div class="img-thumbnail">
						<figure class="figure">
							<img src="<%= camp.image %>" class="figure-img img-fluid rounded"></img>
							<figcaption class="figure-caption">
								<h5 class="float-right">$4.00/night</h5>
								<h4><a href="#"><%= camp.name %></a></h4>
								<p><%= camp.description %></p>
							</figcaption> 
						</figure>						
					</div>
					<div class="card card-body bg-light">
						<div class="card-body">
							<div class="text-right">
								<a class="btn btn-success btn-sm" href="<%= camp._id %>/comments/new">Add a comment</a>
							</div>
							<hr>							
							<% camp.comments.forEach(function(commentData){ %>
							<div class="row">
								<div class="col-md-12">
									<strong><%= commentData.author.username %></strong>
									<span class="float-right">10 days ago</span>
									<p><%= commentData.text %></p>
								</div>
							</div>
							<% }) %>
						</div>
					</div>
				</div>
		</div>		
</div>
	


<% include ../partials/footer.ejs %>