<% include ../partials/header %>
<div class='container'>
    <h1 style="text-align:center;">Add a new comment for <%= camp.name %></h1>
        <div class='row'>
            <div style='width:30%; margin : 35px auto;'>
                <form method="POST" action="/camps/<%= camp._id %>/comments">
                    <div class ='form-group'>
                    <input class='form-control' type='text' placeholder='Write a comment' name='comment[text]'></input>
                    </div>
                    <div class ='form-group'>
                    <button class='btn btn-lg btn-primary btn-block' type='submit'>Submit</button>
                    </div>
                </form>
                 <a href='/camps/<%= camp._id %>'>Go Back</a>
            </div>
        
    </div>
   
</div>

<% include ../partials/footer %>
